@model StudentInformationSystem.Models.Exams

@{
    ViewBag.Title = "DetailsExam";
}

<h2>考试详情</h2>

<div>
    <h4>@Model.Courses.CourseName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            课程名称
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Courses.CourseName)
        </dd>

        <dt>
            考试时间
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExamTime)
        </dd>

        <dt>
            考试地点
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            备注
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Details)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("编辑", "EditExam", new { id = Model.ExamID }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("返回列表", "ExamList", null, new { @class = "btn btn-default" })
</p>
