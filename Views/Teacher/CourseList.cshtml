@model IEnumerable<StudentInformationSystem.Models.Courses>

@{
    ViewBag.Title = "我的授课列表";
}

<h2>我的授课列表</h2>
<p>以下是您本学期所教授的全部课程。请选择一门课程进入成绩录入。</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>课程名称</th>
            <th>学分</th>
            <th>操作</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                <td>@Html.DisplayFor(modelItem => item.Credits)</td>
                <td>
                    @Html.ActionLink("进入成绩录入", "GradeEntry", new { courseId = item.CourseID }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("打印名单", "ClassRoster", new { courseId = item.CourseID }, new { @class = "btn btn-default btn-sm", target = "_blank" })
                </td>
            </tr>
        }
    </table>
</div>