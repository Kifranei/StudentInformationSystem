@model List<StudentInformationSystem.Models.ClassSessions>

@{
    ViewBag.Title = "我的课表";
    int currentWeek = ViewBag.CurrentWeek;
    string[] periodTimes = { "08:40-09:25", "09:30-10:15", "10:35-11:20", "11:25-12:10", "13:20-14:05", "14:10-14:55", "15:15-16:00", "16:05-16:50", "17:30-18:15", "18:20-19:05", "19:10-19:55", "20:00-20:45" };
    string[] days = { "星期一", "星期二", "星期三", "星期四", "星期五", "星期六", "星期日" };
    var timetableData = new Dictionary<string, StudentInformationSystem.Models.ClassSessions>();
    foreach (var session in Model)
    {
        for (int i = session.StartPeriod; i <= session.EndPeriod; i++)
        {
            var key = $"{session.DayOfWeek}_{i}";
            timetableData[key] = session;
        }
    }
}

@* 显示成功操作的消息（移除关闭按钮） *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong><span class="glyphicon glyphicon-ok-circle"></span> 成功！</strong> @TempData["SuccessMessage"]
    </div>
}

<div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>我的课表</h2>
    <div>
        @Html.ActionLink("添加课程安排", "AddClassSession", null, new { @class = "btn btn-primary", @style = "margin-right: 5px;" })
        @Html.ActionLink("管理安排", "ManageClassSessions", null, new { @class = "btn btn-info", @style = "margin-right: 10px;" })
        <label class="checkbox-inline" style="margin-right: 15px;">
            <input type="checkbox" id="toggle-adjust-btn"> 隐藏调课按钮
        </label>
        <button id="export-timetable-btn" class="btn btn-success">
            <span class="glyphicon glyphicon-picture"></span> 导出为图片
        </button>
    </div>
</div>

@* 假日周次提示 *@
@{
    var holidayDescriptions = StudentInformationSystem.Helpers.HolidayHelper.GetHolidayWeekDescriptions();
    if (holidayDescriptions.Any())
    {
        <div class="alert alert-info" style="margin-top: 15px;">
            <h5><span class="glyphicon glyphicon-calendar"></span> 本学期法定假日提醒</h5>
            <p>
                @foreach (var holiday in holidayDescriptions)
                {
                    <span class="label label-warning" style="margin-right: 8px;">第@(holiday.Key)周：@holiday.Value</span>
                }
            </p>
            <small class="text-muted">假日周次将自动从课表中排除，不会显示课程安排。</small>
        </div>
    }
}

<div class="timetable-tabs">
    <button id="master-view-btn" class="btn btn-primary active">总课表</button>
    <button id="weekly-view-btn" class="btn btn-default">周课表</button>
</div>
<hr />

@* --- 周课表容器 --- *@
<div id="weekly-view" style="display: none;">
    @using (Html.BeginForm("Timetable", "Teacher", FormMethod.Get, new { @class = "form-inline" }))
    {
        <div class="form-group">
            <label>选择周数：</label>
            @Html.DropDownList("selectedWeek", (IEnumerable<SelectListItem>)ViewBag.WeekList, new { @class = "form-control" })
        </div>
        <input type="submit" value="查询" class="btn btn-primary" />
    }
    
    @* 显示当前周的假日状态 *@
    @{
        var isCurrentWeekHoliday = StudentInformationSystem.Helpers.HolidayHelper.IsHolidayWeek(currentWeek);
        if (isCurrentWeekHoliday)
        {
            var holidayInfo = holidayDescriptions.ContainsKey(currentWeek) ? holidayDescriptions[currentWeek] : "法定假日";
            <div style="margin: 10px 0;">
                <span class="label label-danger">第@currentWeek周：@holidayInfo（无课）</span>
            </div>
        }
    }
    
    <br />
    <div class="table-responsive">
        <table class="table table-bordered text-center timetable" id="weekly-timetable-table">
            <thead>
                <tr>
                    <th style="width: 120px;">时间</th>
                    @foreach (var day in days)
                    {
                        <th>@day</th>
                    }
                </tr>
            </thead>
            <tbody>
                @{
                    var isHolidayWeek = StudentInformationSystem.Helpers.HolidayHelper.IsHolidayWeek(currentWeek);
                }
                @for (int period = 1; period <= 12; period++)
                {
                    <tr>
                        <td><strong>第 @period 节</strong><br /><small class="text-muted">@periodTimes[period - 1]</small></td>
                        @for (int day = 1; day <= 7; day++)
                        {
                            var key = $"{day}_{period}";
                            
                            if (timetableData.ContainsKey(key) && currentWeek >= timetableData[key].StartWeek && currentWeek <= timetableData[key].EndWeek && !isHolidayWeek)
                            {
                                var session = timetableData[key];
                                if (session.StartPeriod == period)
                                {
                                    var rowspan = session.EndPeriod - session.StartPeriod + 1;
                                    <td rowspan="@rowspan" class="has-class">
                                        <strong>@session.Courses.CourseName</strong><br />
                                        <small>(@session.StartWeek-@session.EndWeek 周)</small><br />
                                        <small>@session.Classroom</small>
                                        <hr style="margin: 5px 0;" class="adjust-class-hr" />
                                        @Html.ActionLink("调课", "AdjustClass", new { sessionId = session.SessionID }, new { @class = "btn btn-warning btn-xs adjust-class-btn" })
                                    </td>
                                }
                            }
                            else if (isHolidayWeek && period == 1)
                            {
                                @* 在假日周的第一节显示假日提示 *@
                                <td rowspan="12" class="holiday-week">
                                    <div class="holiday-notice">
                                        <span class="glyphicon glyphicon-calendar" style="font-size: 24px; color: #d9534f;"></span><br />
                                        <strong>法定假日</strong><br />
                                        <small>本周无课</small>
                                    </div>
                                </td>
                            }
                            else if (!isHolidayWeek)
                            {
                                <td></td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

