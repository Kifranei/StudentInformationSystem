@model List<StudentInformationSystem.Models.ClassSessions>

@{
    ViewBag.Title = "我的课表";
    int currentWeek = ViewBag.CurrentWeek;
    string[] periodTimes = { "08:40-09:25", "09:30-10:15", "10:35-11:20", "11:25-12:10", "13:20-14:05", "14:10-14:55", "15:15-16:00", "16:05-16:50", "17:30-18:15", "18:20-19:05", "19:10-19:55", "20:00-20:45" };
    string[] days = { "周一", "周二", "周三", "周四", "周五", "周六", "周日" };
    var timetableData = new Dictionary<string, StudentInformationSystem.Models.ClassSessions>();
    foreach (var session in Model)
    {
        for (int i = session.StartPeriod; i <= session.EndPeriod; i++)
        {
            var key = $"{session.DayOfWeek}_{i}";
            timetableData[key] = session;
        }
    }
}

<div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>我的课表</h2>
    <button id="export-timetable-btn" class="btn btn-success">
        <span class="glyphicon glyphicon-picture"></span> 导出为图片
    </button>
</div>

<div class="timetable-tabs">
    <button id="master-view-btn" class="btn btn-primary active">总课表</button>
    <button id="weekly-view-btn" class="btn btn-default">周课表</button>
</div>
<hr />

@* --- 周课表容器 --- *@
<div id="weekly-view" style="display: none;">
    @using (Html.BeginForm("Timetable", "Teacher", FormMethod.Get, new { @class = "form-inline" }))
    {
        <div class="form-group">
            <label>选择周数：</label>
            @Html.DropDownList("selectedWeek", (IEnumerable<SelectListItem>)ViewBag.WeekList, new { @class = "form-control" })
        </div>
        <input type="submit" value="查询" class="btn btn-primary" />
    }
    <br />
    <div class="table-responsive">
        <table class="table table-bordered text-center timetable" id="weekly-timetable-table">
            <thead>
                <tr>
                    <th style="width: 120px;">时间</th>
                    @foreach (var day in days)
                    {
                        <th>@day</th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (int period = 1; period <= 12; period++)
                {
                    <tr>
                        <td><strong>第 @period 节</strong><br /><small class="text-muted">@periodTimes[period - 1]</small></td>
                        @for (int day = 1; day <= 7; day++)
                        {
                            var key = $"{day}_{period}";
                            if (timetableData.ContainsKey(key) && currentWeek >= timetableData[key].StartWeek && currentWeek <= timetableData[key].EndWeek)
                            {
                                var session = timetableData[key];
                                if (session.StartPeriod == period)
                                {
                                    var rowspan = session.EndPeriod - session.StartPeriod + 1;
                                    <td rowspan="@rowspan" class="has-class">
                                        <strong>@session.Courses.CourseName</strong><br />
                                        <small>(@session.StartWeek-@session.EndWeek 周)</small><br />
                                        <small>@session.Classroom</small>
                                        <hr style="margin: 5px 0;" />
                                        @* --- 1. 这里加回“调课”按钮 --- *@
                                        @Html.ActionLink("调课", "AdjustClass", new { sessionId = session.SessionID }, new { @class = "btn btn-warning btn-xs" })
                                    </td>
                                }
                            }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* --- 总课表容器 --- *@
<div id="master-view">
    <div class="table-responsive">
        <table class="table table-bordered text-center timetable" id="master-timetable-table">
            <thead>
                <tr>
                    <th style="width: 120px;">时间</th>
                    @foreach (var day in days)
                    {
                        <th>@day</th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (int period = 1; period <= 12; period++)
                {
                    <tr>
                        <td><strong>第 @period 节</strong><br /><small class="text-muted">@periodTimes[period - 1]</small></td>
                        @for (int day = 1; day <= 7; day++)
                        {
                            var key = $"{day}_{period}";
                            if (timetableData.ContainsKey(key))
                            {
                                var session = timetableData[key];
                                if (session.StartPeriod == period)
                                {
                                    var rowspan = session.EndPeriod - session.StartPeriod + 1;
                                    <td rowspan="@rowspan" class="has-class">
                                        <strong>@session.Courses.CourseName</strong><br />
                                        <small>(@session.StartWeek-@session.EndWeek 周)</small><br />
                                        <small>@session.Classroom</small>
                                        <hr style="margin: 5px 0;" />
                                        @* --- 2. 这里也加回“调课”按钮 --- *@
                                        @Html.ActionLink("调课", "AdjustClass", new { sessionId = session.SessionID }, new { @class = "btn btn-warning btn-xs" })
                                    </td>
                                }
                            }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // --- 1. Tab-switching logic ---
            $('#weekly-view-btn').on('click', function () {
                $('#master-view').hide();
                $('#weekly-view').show();
                $(this).removeClass('btn-default').addClass('btn-primary active');
                $('#master-view-btn').removeClass('btn-primary active').addClass('btn-default');
            });

            $('#master-view-btn').on('click', function () {
                $('#weekly-view').hide();
                $('#master-view').show();
                $(this).removeClass('btn-default').addClass('btn-primary active');
                $('#weekly-view-btn').removeClass('btn-primary active').addClass('btn-default');
            });

            var urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('selectedWeek')) {
                $('#weekly-view-btn').click();
            }

            // --- 2. Image export logic ---
            $('#export-timetable-btn').on('click', function () {

                // Determine which table is currently visible
                var activeTableId = $('#weekly-view').is(':visible') ? 'weekly-timetable-table' : 'master-timetable-table';
                var timetableElement = document.getElementById(activeTableId);

                var button = $(this);
                button.text('正在生成...').prop('disabled', true);

                html2canvas(timetableElement).then(function (canvas) {
                    var link = document.createElement('a');
                    link.download = '我的课表.png';
                    link.href = canvas.toDataURL("image/png");
                    link.click();

                    button.html('<span class="glyphicon glyphicon-picture"></span> 导出为图片').prop('disabled', false);
                });
            });

        }); // The one and only closing tag for .ready()
    </script>
}

<style>
    .timetable-tabs {
        margin-bottom: 15px;
    }

    .timetable {
        min-width: 800px;
        table-layout: fixed;
    }

        .timetable th, .timetable td {
            vertical-align: middle !important;
            height: 80px;
            padding: 5px !important;
        }

        .timetable .has-class {
            background-color: #d9edf7;
            border: 1px solid #bce8f1;
            font-size: 13px;
            line-height: 1.5;
        }
</style>