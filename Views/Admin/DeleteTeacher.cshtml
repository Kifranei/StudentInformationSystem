@model StudentInformationSystem.Models.Teachers

@{
    ViewBag.Title = "删除教师";
}

<h2>删除教师</h2>

<h3 class="text-danger">您确定要删除这位教师吗？其登录账号也将一并移除。</h3>
<div>
    <h4>@Model.TeacherName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            教师工号
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TeacherID)
        </dd>

        <dt>
            姓名
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TeacherName)
        </dd>

        <dt>
            职称
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="确认删除" class="btn btn-danger" /> |
            @Html.ActionLink("返回列表", "TeacherList", null, new { @class = "btn btn-default" })
        </div>
    }
</div>