@model StudentInformationSystem.Models.Teachers

@{
    ViewBag.Title = "编辑教师信息";
}

<h2>编辑教师信息</h2>
<h4>@Model.TeacherName</h4>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* 1. 用隐藏字段来保存并提交主键 TeacherID *@
        @Html.HiddenFor(model => model.TeacherID)

        @* 2. 用隐藏字段来保存并提交 UserID，防止在更新时丢失 *@
        @Html.HiddenFor(model => model.UserID)

        <div class="form-group">
            @Html.LabelFor(model => model.TeacherID, "教师工号 (不可修改)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @* 3. 将显示的输入框设为只读 *@
                @Html.EditorFor(model => model.TeacherID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeacherName, "姓名", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TeacherName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TeacherName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, "职称", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保 存" class="btn btn-success" />
                @Html.ActionLink("返回列表", "TeacherList", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}