@model StudentInformationSystem.Models.Students

@{
    ViewBag.Title = "删除学生";
}

<h2>删除学生</h2>

<h3 class="text-danger">您确定要删除这位学生吗？此操作不可恢复。</h3>
<div>
    <h4>@Model.StudentName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            学号
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentID)
        </dd>

        <dt>
            姓名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentName)
        </dd>

        <dt>
            班级
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Classes.ClassName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="确认删除" class="btn btn-danger" /> |
            @Html.ActionLink("返回列表", "StudentList", null, new { @class = "btn btn-default" })
        </div>
    }
</div>